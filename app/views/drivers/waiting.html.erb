<%= form_for Driver.new do |f| %>
  <% PickupSpot.all.each do |spot| %>
    <%= f.radio_button :pickup_spot_id, spot.id %>
    <%= f.label "pickup_spot_id_#{spot.id}", "#{spot.name} - #{spot.waiting_riders.count} #{image_tag('man_icon.png').html_safe}, #{spot.waiting_drivers.count} #{image_tag('green_car.png').html_safe}".html_safe %>
  <% end %>
  <%= f.submit "Tell Riders I'm here!" %>
  <%= f.submit "Tell Riders I'll be there in 5 minutes" %>
<% end %>

<%= button_to "Refresh/I'm still waiting!", '', :method => :get %>
<br />
<%= button_to "Exit/Got my Riders!", @driver, :method => :delete %>










