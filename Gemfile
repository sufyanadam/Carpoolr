source 'http://rubygems.org'

gem 'rails', '4.2.4'
gem 'geocoder'

group :development do
  gem 'heroku'
  gem 'sqlite3'   
end

group :production do 
  gem 'pg'
end

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails'
  gem 'coffee-rails'
  gem 'uglifier'
  gem 'therubyracer', :platform => :ruby
end

gem 'jquery-rails'

group :test, :development do
  gem 'capybara'
  gem 'rspec-rails'
  gem 'pry'
end
